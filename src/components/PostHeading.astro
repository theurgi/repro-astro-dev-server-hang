---
type Props = {
	title: string
	minutesRead: string
}

const { title, minutesRead }: Props = Astro.props
---

<h1 article-title>{title}</h1>

<span class="time"
	>{minutesRead.split('read')[0].trim().split(' ').join('')}</span
>

<style>
	.date,
	.time {
		font-size: var(--font-size-2);
	}

	.date {
		margin-right: 0.5rem;
		font-family: var(--font-family-mono);
		color: var(--foreground-1);
	}

	.time {
		color: var(--foreground-2);
	}
</style>
